<!DOCTYPE html>
<html>

<head>
  <mate charest="utf-8" />
  <!-- <link rel="stylesheet" href="dist/css/adminlte.min.css" /> -->
  <link rel="stylesheet" href="./public//dist/css/adminlte.min.css" />
  <title>Sales PDF</title>
</head>

<body>
  <h1>Sales List</h1>
  <div class="card">
    <div class="card-header">Sale Details</div>
    <div class="card-body table-responsive p-0" style="height: 400px">
      <table class="table table-striped table-head-fixed text-nowrap">
        <thead>
          <tr>
            <th style="width: 20%">Purchase Date</th>
            <th style="width: 15%">Product ID</th>
            <th style="width: 15%">Unit Price</th>
            <th style="width: 15%">Quantity</th>
            <th style="width: 20%">Total Sales(in Rs.)</th>
          </tr>
        </thead>
        <tbody>
          {{#each sales}}
          <tr>
            <td>{{this.purchase_date}}</td>
            <td>{{this.product_id}}</td>
            <td>{{this.unit_price}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.total_sales}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>